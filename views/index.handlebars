<div class="container">
    <h1>BURGERS</h1>
        

    <div>
    <h1>Ready to Eat</h1>
        <ul>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}

                        <form method="POST" action="/{{this.id}}?_method=PUT">
                            <input type = "hidden" name = "devoured" value = "true">
                            <button type = "submit">EAT</button>
                        </form>
                    </li>
                {{/unless}}
            {{/each}}                
        </ul>
    </div>

    <div>
    <h1>Eaten</h1>
        <ul>
            {{#each burgers}}
                {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}

                    </li>
                {{/if}}
            {{/each}}                
        </ul>
    </div>
</div>



